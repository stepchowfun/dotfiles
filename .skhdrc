# Focusing windows
shift + cmd - h : chunkc tiling::window --focus west
shift + cmd - j : chunkc tiling::window --focus south
shift + cmd - k : chunkc tiling::window --focus north
shift + cmd - l : chunkc tiling::window --focus east

# Moving windows
shift + cmd - left : chunkc tiling::window --warp west
shift + cmd - down : chunkc tiling::window --warp south
shift + cmd - up : chunkc tiling::window --warp north
shift + cmd - right : chunkc tiling::window --warp east

# Moving region separators
shift + alt - left : \
  chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge west; \
  chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge east
shift + alt - down : \
  chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge south; \
  chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge north
shift + alt - up : \
  chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge north; \
  chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge south
shift + alt - right : \
  chunkc tiling::window --use-temporary-ratio 0.05 --adjust-window-edge east; \
  chunkc tiling::window --use-temporary-ratio -0.05 --adjust-window-edge west

# Equalizing window sizes
shift + cmd - 0 : chunkc tiling::desktop --equalize

# Toggling fullscreen
alt - f : chunkc tiling::window --toggle fullscreen
